@article{yu2022strong,
  title={Strong coupling between a photon and a hole spin in silicon},
  author={Yu, Cecile X and Zihlmann, Simon and Abadillo-Uriel, Jose C and Michal, Vincent P and Rambal, Nils and Niebojewski, Heimanu and Bedecarrats, Thomas and Vinet, Maud and Dumur, Etienne and Filippone, Michele and others},
